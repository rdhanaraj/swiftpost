<%= form_for @order, :url => orders_path, :html => { :multipart => true } do |form| %>
    <div class="field form-group nr">
      <%= form.label :design %><br>
      <%= form.file_field :design, class: 'form-control' %>
    </div>
    <div class="actions">
      <%= form.submit class: 'btn btn-success' %>
    </div>
<% end %>