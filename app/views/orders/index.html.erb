<% @orders = Order.all %>
<% if (@orders.count > 0) %>
  <% @orders.each do |order| %>
    <%= image_tag order.design.url(:thumb) %>

    <strong>Number of copies:</strong> <%= order.recipients.count %>
    <strong>Order date:</strong> <%= order.order_date %>
    <strong>Paper Setting:</strong> <%= order.setting %>
    <strong>Total Cost:</strong> <%= order.expenses %>
<% end %>

<% else %>
  No orders
<% end %>
